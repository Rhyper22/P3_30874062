<!DOCTYPE html>
<html lang="es">
<head>

  <meta charset="UTF-8">
  <title>Productos</title>
  <link rel="stylesheet" type="text/css" href="/css/producto.css">
  <link rel="icon" type="image/x-icon" href="/img/reloj.png" />
  
</head>
<body>

  <div id='botonera'>
    
    <a href="/logout2" class='botonProductos'>Cerrar</a>
    <a href="/usuarios" class='botonProductos'>Users</a>
    <a href="/compras" class='botonProductos'>Compras</a>
    <a href="/productos" class='botonProductos'>Productos</a>
    <a href='/categorias' class='botonProductos'>Categorias</a>

  </div>
 
 <h1>Productos</h1>
  
  <div class="table">
    <table>
          <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Codigo</th>
            <th>Precio</th>
            <th>Descripcion</th>
            <th>Calidad</th>
            <th>Cantidad</th>
            <th>Categoria</th>
            <th><a href="/add"><img src="/img/add.png" id='add'></a></th>
          </tr>
          <%for(const producto of modelo){%>
            <tr>
              <td><%=producto.producto_id%></td>
              <td><%=producto.nombre%></td>
              <td><%=producto.codigo%></td>
              <td><%=producto.precio%></td>
              <td><%=producto.descripcion%></td>
              <td><%=producto.calidad%></td>
              <td><%=producto.cantidad%></td>
              <td><%=producto.categoria_id%></td>
              <td class="icon">
              <a href="/update/<%= producto.producto_id%>"><img src="/img/update.png" width="30"></a>
              <a href="/delete/<%= producto.producto_id%>"><img src="/img/delete.png" width="30" id="delete"></a>
              <a href="/addImagen/<%= producto.producto_id%>" id='img'><img src="/img/imgg.png" width="30"></a>
             </td>
            </tr>
           <%}%>
        </table>
       
  </div>
  
</body>
</html>
